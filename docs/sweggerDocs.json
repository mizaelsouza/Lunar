  "paths": {
    "/produtos/cadastro": {
      "post": {
        "sumary": "Cadastro de produtos.",
        "description": "Essa api tem a finalidade de cadastrar novos produtos.",
        "tags": ["Produtos"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "$ref": "#/components/schemas/Produtos"
              },
              "examples": {
                "Produtos": {
                  "value": {
                    "descricao": "Primeiro cadastro teste",
                    "secaoId": 1,
                    "grupoId": 1,
                    "subGrupoId": 1,
                    "status": 1,
                    "preco": 50.25,
                    "estoque": 10,
                    "custoNota": 50.25,
                    "custoReposicao": 50.25,
                    "custoContabil": 50.25,
                    "lojaId": 1,
                    "url": " "
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },

          "500": {
            "description": "Not Found"
          }
        }
      }
    },
